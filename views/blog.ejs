<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('partials/head') %>
    <title>Blogs</title>
</head>
<body>
    <%- include('partials/navbar') %>
    <div class="container mt-4">
        <h1><%= blog.title %></h1>
        <img src="<%= blog.coverimg %>" width="450px"><%= blog.createdBy.fullname %>
        <p><%= blog.body %></p>
    </div>
    <div class="container mt-4">
        <img src="<%= blog.createdBy.profileimg %>" width="50px"/> <%= blog.createdBy.fullname %>
    </div>
    <div class="container mt-4">
        <h1> Comments </h1>
        <form action="/blog/comment/<%= blog._id %>" method="post">
            <div class="mb-3">
                <input type="text" class="form-control" name="content" placeholder="Enter Your Comments">
                <button class="btn btn-sm btn-primary" type="submit">Add</button>
            </div>
        </form>
        <% comments.forEach(comment => { %>
            <div class="mt-3">
                <img src="<%= comment.createdBy.profileimg %>" width="50px"/>
                <strong><%= comment.createdBy.fullname %></strong>
                <pre><%= comment.content %></pre>
                <pre><%= JSON.stringify(comments, null, 2) %></pre>
            </div>
        <% }) %>
    </div> 
    <%- include('partials/scripts') %>
</body>
</html>